
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- Single pro tab review Start-->
<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <div id="myTabContent" class="tab-content custom-product-edit">
                        <div class="product-tab-list tab-pane fade active in" id="description">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="review-content-section">
                                        <div id="dropzone1" class="pro-ad">
                                            @using (Html.BeginForm("Index", "Home", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
                                            {
                                                <div class="row">
                                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                        <div class="tinymce-single responsive-mg-b-30">
                                                            <div class="alert-title">
                                                                <div class="form-group">
                                                                    <input name="title" type="text" class="form-control" placeholder="Title ...">
                                                                </div>
                                                                <div class="form-group">
                                                                    <select id="typeOfNews" name="typeOfNews" class="form-control">
                                                                        <option value="none" selected="" disabled="">Chọn loại tin tức</option>
                                                                        <option value="1">Events & Workshop</option>
                                                                        <option value="2">Ấn phẩm khoa học</option>
                                                                        <option value="3">Chăm sóc sắc đẹp</option>
                                                                        <option value="4">Câu hỏi thường gặp</option>
                                                                    </select>
                                                                </div>
                                                                <div class="form-group">
                                                                    <input name="finish" id="finish" type="text" class="form-control" placeholder="Ngày diễn ra Sự kiện / Ấn phẩm">
                                                                </div>
                                                                <div class="form-group" id="fileImage">
                                                                    <label for="file">Chọn ảnh đại diện cho bài viết:</label> <input type="file" name="image" class="btn btn-primary waves-effect waves-light"/>
                                                                </div>
                                                            </div>

                                                            <textarea type="text" id="summernote" name="contentPost"></textarea>
                                                            <input id="plainText" type="text" style="display: none" name="description" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="payment-adress">
                                                            <button type="submit" id="submitTest" class="btn btn-primary waves-effect waves-light">Submit</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- tinymce Start-->
<div class="tinymce-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

            </div>
        </div>
    </div>
</div>
<!-- tinymce End-->


<script type="text/javascript">

    $('#typeOfNews').change(function () {
        var item = $(this).val();
        if (item === "1" || item === "2") {
            $("#fileImage").show();
            $("#finish").show();
        } else {
            $("#fileImage").hide();
            $("#finish").hide();
        }
    });

    var type = '@ViewBag.AddNewPost';
    if (type !== null && type !== "") {
        Lobibox.notify('success', {
            msg: 'Add new post successed'
        });
    }

    $(function () {
        // When the summernote instance loses focus, update the content of your <textarea>
        $("#summernote").on('summernote.blur', function () {
            $("#plainText").val($($("#summernote").summernote("code")).text());
        });
    });
</script> 